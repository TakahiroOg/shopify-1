<section id="LandingPage2-{{ section.id }}" data-section="{{ section.id }}">
   {{ 'section-product-banner-2.css' | asset_url | stylesheet_tag }}
   <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
   {%- assign product_form_id = 'product-form-' | append: section.id -%}
  
  <div class="product-banner-section">
    <div class="banner-section-container">
      <div class="a-flex-row banner-section-inner">
        <div class="banner-content">
          <h1>{{ product.metafields.custom.bold_claim }}</h1>
            <div class="banner-subtext">
              <span>{{ product.metafields.custom.subtitle }}</span>
            </div>
            <ul class="banner-list">
              {% for benefit in product.metafields.custom.list_of_benefits.value %}
                <li> {{ benefit }}</li>
              {% endfor %}
            </ul>
            <div class="price-save-stock flex-row-center">
              <div class="b-price">
                <span class="sale-price">$169.99</span>
                <span class="comp-price">$249.99</span>
              </div>
              <div class="b-off">
                <div class="sale-tag">SALE</div>
              </div>
            </div>

            <div class="flex-row-center">
             <div {{ block.shopify_attributes }}>
               <product-form class="product-form">
                 {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                 <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" disabled>
                 <div class="b-get-btn">
                   <button type="submit" name="add"
                     {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}>
                     <span>ADD TO CART</span>
                     <div class="loading-overlay__spinner hidden">
                       <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66"
                         xmlns="http://www.w3.org/2000/svg">
                         <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                       </svg>
                     </div>
                   </button>

                 </div>
                 {%- endform -%}
               </product-form>
             </div>
             <script src="{{ 'pickup-availability.js' | asset_url }}" defer="defer"></script>

            <div class="b-safe-checkout">
              <div class="flex-row-center" style="padding-left:10px;">
                  <img class ="lock-icon" src="https://cdn.shopify.com/s/files/1/0555/1774/1228/files/bxs_lock.png?v=1656162380">
                <span class="safe-checkout">GUARANTEED SAFE CHECKOUT</span>
              </div>
                <img class="payment-logos" src="https://cdn.shopify.com/s/files/1/0555/1774/1228/files/payment-logo.png?v=1655214307">
            </div>
          </div>
          
          <div class="review-card flex-row-center">
            <img src="https://cdn.shopify.com/s/files/1/0555/1774/1228/files/img2.jpg?v=1656165646" alt="">
            <div></div>
          </div>
            <span class="review">{{ product.metafields.custom.bold_claim }}</span>
            <span class="name">Sam G.</span>
            <span class="verify">Verified Buyer</span>
        </div>

      <div class="banner-img">
        <img src="https://cdn.shopify.com/s/files/1/0555/1774/1228/files/img7.jpg?v=1656164987">
      </div>

      </div>
    </div>
  </div>
</section>